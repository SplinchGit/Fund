generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")  // Make sure this matches the key in your .env file
}

model User {
  id                 String   @id @default(cuid())
  worldNullifierHash String   @unique
  worldAppId         String
  name               String?  @unique // ‚Üê make it unique if you want
  passwordHash       String?
  isVerified         Boolean  @default(false)
  campaigns          Campaign[]
  createdAt          DateTime @default(now())
}



model Campaign {
  id        String   @id @default(cuid())
  owner     User     @relation(fields: [ownerId], references: [id])
  ownerId   String
  title     String
  goal      Float
  createdAt DateTime @default(now())
}
